// change the h4 default css
h4 {
  font-size: 1.15rem;
}


// change the width in phone
@media only screen and (max-width:1180px){
    .theme-default-content:not(.custom){
        max-width: 92%;
    }
}  


// change the siderbar css
.sidebar-group > ul > li > a.sidebar-link{
	font-weight: 450;
}
//.sidebar-group > ul > li > a.sidebar-link.active{
//	background-color: #d5f0e4;
//}
.sidebar .sidebar-sub-headers{
	padding-left: 1.5rem !important;
}

.sidebar-sub-headers > li > a.sidebar-link{
	font-size: 0.92rem;
	color: #666666;
}
.sidebar-sub-headers > li > .sidebar-sub-headers > li > a.sidebar-link{
	font-size: 0.8rem;
	color: #9DAAB6;
}
a.sidebar-link{
	padding: 0.35rem 1rem 0.35rem 2.75rem !important;
	margin: 0 !important;
}
a.sidebar-link.active{
	background: #3eaf7c;
}


// page background
.page, .password-wrapper-in{
	background: #f6f6f6;
	min-height: 1200px;
}
.page{
	padding-top: 3.6rem !important;
    padding-bottom: 0rem !important;
}
.page .page-title{
	background: #fff;
}
.page .content__default:not(.custom){
    background: #fff;
    min-height: 800px;
}
.page-edit{
	background: #fff;
}
.page .page-edit, .page .comments-wrapper, .page-nav{
	background: #fff;
}


// homepage fix after above change
.home-blog .home-blog-wrapper{
	padding-bottom: 1rem;
}


// fix issue that in homepage, the code css is not the as in content
code {
    color: #505050;
    padding: .25rem .5rem;
    margin: 0;
    font-size: .85em;
    background-color: var(--code-color);
    border-radius: 3px;
}